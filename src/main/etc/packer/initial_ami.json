{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-07683a44e80cd32c5",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "vpc_filter": {
          "filters": {
            "tag:Name": "default",
            "isDefault": "false"
          }
    },
    "subnet_filter": {
          "filters": {
            "tag:Name": "Public subnet"
          },
          "random": true
    },
    "associate_public_ip_address": "true",
    "ami_name": "packer-example {{timestamp | clean_ami_name}}"
  }],
  "provisioners": [{
    "type": "file",
    "source": "stuff.tar.bz2",
    "destination": "stuff.tar.bz2"
  }, {
    "type": "shell",
    "script": "install.sh"
  }]
}
